{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "../dist",
    "rootDir": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["server/**/*", "src/db/**/*", "scripts/**/*"],
  "exclude": ["node_modules"]
}
