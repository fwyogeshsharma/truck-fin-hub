{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "../dist",
    "rootDir": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["../server/**/*", "../src/db/**/*", "../scripts/**/*"],
  "exclude": ["../node_modules", "../dist"]
}
